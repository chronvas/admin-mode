@model admin_mode.Models.ComboItem

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ComboItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <br />

        <dt>
            Users Associated ( @Model.ApplicationUsers.Count )
        </dt>
        <dd>
            @Html.ActionLink("Go to Users", "Users", "AdminMainPage")
        </dd>
        @foreach (var user in @Model.ApplicationUsers)
        {
            <dd>
                @user.Email
            </dd>
        }
        
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CombooItemId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
