@model admin_mode.Models.ComboItem

@{
    ViewBag.Title = "Delete";
}
 
<h3>Are you sure you want to delete this ComboItem?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <div class="bg-warning">
        <div class="text-warning alert-danger h3"><span class="glyphicon glyphicon-warning-sign"></span> Warning!</div>
        <div class="text-warning ">
            There are still <b>@Model.ApplicationUsers.Count</b> User(s) associated with this Item!
        </div>

        @foreach (var applicationUser in @Model.ApplicationUsers)
            {
            <br />
                <b>
                    @applicationUser.UserName
                </b>
        }
        <br />
        <br />

        <div class="text-warning ">
            If you continue, Theese users will lose the association.
        </div>
        <br />
    </div>
    <br />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }

</div>
